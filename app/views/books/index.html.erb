<body>
 <p id="notice"></p>
 <h1>Books</h1>
 <table>
   <thead>
     <tr>
       <th>Title</th>
       <th>Body</th>
       <th colspan="3"></th>
     </tr>
   </thead>
   <tbody>
    <% @books.each do |book| %>
     <tr>
       <td><%= link_to book.title, book_path(book) %></td>
       <td><%= link_to book.body, book_path(book) %></td>
     </tr>
     <tr>
    <% end %>
   </tbody>
 </table>
</body>
 <h2>New book</h2>
 <%= form_with model:@book, local:true do |f| %>
  <div class="field">
   <label for="book_title">Title</label>
   <%= f.text_field :title %>
  </div>
  <div class="field">
   <label for="book_body">Body</label>
   <%= f.text_area :body %>
  </div>
  <div class="actions">
   <%= f.submit 'Create Book' %>
  </div>
 <% end %>