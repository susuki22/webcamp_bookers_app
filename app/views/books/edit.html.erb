 <h1>Editing Book</h1>
  <% if @book.errors.any? %>
   <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
   </ul>
  <% end %>
 <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <div class="field">
   <label for="book_title">Title</label>
   <%= f.text_field :title %>
  </div>
  <div class="field">
   <label for="book_body">Body</label>
   <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
  <%= link_to "Show", book_path(@book) %>
    |
  <a class="back" href="/books">Back</a>
 <% end %>